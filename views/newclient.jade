extends layout

block content 
        // new user form
        #newclient.container
         .row
            #newform.col-sm-12(style='width: 100%;height: auto;')
                form#contact_form.well.form-horizontal(action='/newclient', method='POST', target='_self')
                    fieldset
                        legend.text-center Fill the Form
                        //- legend #{duperror}
                        //- legend Client Details
                        legend
                         | Client Details 
                         strong#duperror  #{duperror}        
                        .form-group
                            label.col-md-4.control-label First Name
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-user
                                input.form-control(name='fname', placeholder='First Name', type='text' required='')
                        .form-group
                            label.col-md-4.control-label Last Name
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-user
                                input.form-control(name='lname', placeholder='Last Name', type='text' required='')
                        .form-group
                            label.col-md-4.control-label Date of Birth
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-user
                                input#birthday.form-control(name='dob', type='date', placeholder='DOB' required='')
                        .form-group
                            label.col-md-4.control-label Gender
                            .col-md-4.inputGroupContainer
                             .input-group
                                label.radio-inline
                                 input#gender(type='radio', name='gender' value='Male')
                                 | Male
                                label.radio-inline
                                 input#gender(type='radio', name='gender' value='Female')
                                 | Female
                        .form-group
                            label.col-md-4.control-label Valid E-Mail
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-envelope
                                input.form-control(name='email', placeholder='E-Mail Address', type='email' required='')
                        .form-group
                            label.col-md-4.control-label Mobile Phone  
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-earphone
                                input.form-control(name='mphone', placeholder='phone', type='number' required='')
                        .form-group
                            label.col-md-4.control-label Home Phone  
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-earphone
                                input.form-control(name='hphone', placeholder='phone', type='number')
                        .form-group
                            label.col-md-4.control-label Unit Number 
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-home
                                input.form-control(name='unumber', placeholder='Unit Number', type='number' required='')
                        .form-group
                            label.col-md-4.control-label Unit Type 
                            .col-md-4.selectContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-home
                                select.form-control.selectpicker(name='utype' required='')
                                    option(value=' ') Apartment
                                    option Flat
                                    option Basement
                                    option Unit
                                    option Home
                        .form-group
                            label.col-md-4.control-label Address
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-home
                                input.form-control(name='address', placeholder='Address', type='text' required='')
                        .form-group
                            label.col-md-4.control-label City
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-home
                                input.form-control(name='city', placeholder='city', type='text' required='')
                        .form-group
                            label.col-md-4.control-label Zip Code
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-home
                                input.form-control(name='zip', placeholder='Zip Code', type='text' required='')
                        legend Login Details
                        label If you are a hospital staff check the box
                        input#checkstaff.check-inline(type='checkbox' name='PorE')
                        .form-group
                            label.col-md-4.control-label Create New Password
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-lock
                                input#npass.form-control(name='npass', placeholder='New Password', type='password' required='')
                        .form-group
                            label.col-md-4.control-label Confirm Password
                            .col-md-4.inputGroupContainer
                             .input-group
                                span.input-group-addon
                                 i.glyphicon.glyphicon-lock
                                input#cpass.form-control(name='cpass', placeholder='Confirm Password', type='password' required='')
                        #success_message.alert.alert-success(role='alert')
                            | Success 
                            i.glyphicon.glyphicon-thumbs-up
                            |  Thanks for join with us.
                        .form-group
                            label.col-md-4.control-label
                            .col-md-4
                             button#nsignup.btn.btn-warning(type='submit', name='signup')
                                | Sign Up
                                span.glyphicon.glyphicon-send
